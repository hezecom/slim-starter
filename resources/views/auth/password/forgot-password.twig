{% extends "layouts/auth.twig" %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
	<form action="{{route('forgot.password')}}" name="register" method="post">
		{{ csrf.field | raw }}
		<div class="row d-flex align-items-center justify-content-center">
			<div class="col-md-6">
				<div class="card px-5 py-5">
					<h5 class="mt-3">Forgot Password?</h5>
					<div class="form-input{{ errors.email ? ' has-error' : '' }}">
						<i class="fa fa-envelope"></i> <input type="text" name="email" class="form-control" placeholder="Email address">
						{% if errors.email %}
							<span class="hel-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-primary mt-4 signup">Reset Password</button>
					<div class="text-center mt-4"> <a href="{{route('login')}}" class="text-decoration-none">Login</a> </div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

